<?xml version="1.0" encoding="utf-8"?>
<plugin id="gentoo">
  <mirror-site id="gentoo">
    <name>Gentoo Source Mirror</name>
    <storage>file</storage>
    <advertiser>
      <interface>file:http</interface>
      <interface>file:ftp</interface>
    </advertiser>
    <initializer>
      <executable>gentoo_initializer.py</executable>
    </initializer>
    <updater>
      <executable>gentoo_updater.py</executable>
      <cron-expression>0 */4 * * *</cron-expression>
    </updater>
  </mirror-site>
  <mirror-site id="gentoo-portage">
    <name>Gentoo Portage</name>
    <storage>file</storage>
    <advertiser>
      <interface>file:rsync</interface>
    </advertiser>
    <initializer>
      <executable>portage_updater.py</executable>
    </initializer>
    <updater>
      <executable>portage_updater.py</executable>
      <cron-expression>0 */4 * * *</cron-expression>
    </updater>
  </mirror-site>
</plugin>

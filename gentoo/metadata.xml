<?xml version="1.0" encoding="utf-8"?>
<plugin id="gentoo">
  <file-mirror id="gentoo">
    <name>Gentoo Source Mirror</name>
    <estimated-size>550GiB</estimated-size>
    <data-directory>gentoo</data-directory>
    <initializer>
      <executable>gentoo_initializer.py</executable>
    </initializer>
    <updater>
      <executable>gentoo_updater.py</executable>
      <cron-expression>0 */4 * * *</cron-expression>
    </updater>
    <advertiser>
      <protocol>http</protocol>
      <protocol>ftp</protocol>
    </advertiser>
  </file-mirror>
  <file-mirror id="gentoo-portage">
    <name>Gentoo Portage</name>
    <estimated-size>700MiB</estimated-size>
    <data-directory>gentoo-portage</data-directory>
    <initializer>
      <executable>portage_updater.py</executable>
    </initializer>
    <updater>
      <executable>portage_updater.py</executable>
      <cron-expression>0 */4 * * *</cron-expression>
    </updater>
    <advertiser>
      <protocol>rsync</protocol>
    </advertiser>
  </file-mirror>
</plugin>
